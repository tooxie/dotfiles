if [ -e ".git/config" ]; then
    echo "
[alias]
	amend = commit -a --amend --no-edit
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	lp = log -p -c
	pr = pull --rebase
	ra = rebase --abort
	rc = rebase --continue
	ri = rebase -i
	st = status
[color]
	branch = auto
	diff = auto
	status = auto
[color \"branch\"]
	current = yellow reverse
	local = yellow
	remote = green
[color \"diff\"]
	frag = magenta bold
	meta = yellow bold
	new = green bold
	old = red bold
[color \"status\"]
	added = yellow
	changed = green
	untracked = cyan
" >> .git/config
else
    echo "No .git directory found"
fi
# vim:set ft=sh:
